@model aluguel.ViewModel.ItemViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/f9a4013b2c.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="assets/css/site.css">
    <link rel="stylesheet" href="assets/css/cadastro.css">
    <link rel="stylesheet" href="assets/css/style.css">

    <title>Login Dark/Light Mode</title>
</head>
<body>
    <main id="container">

        <form id="login_form" method="post" enctype="multipart/form-data">

            <!-- FORM HEADER -->
            <div id="form_header">
                <h1>Que item Deseja Criar?</h1>
                <i id="mode_icon" class="fa-solid fa-moon"></i>

            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nmitem" class="control-label">Nome</label>
                <input asp-for="nmitem" class="form-control" />
                <span asp-validation-for="nmitem" class="text-danger"></span>
           
                <label asp-for="dsitem" class="control-label">Descrição</label>
                <input asp-for="dsitem" class="form-control" />
                <span asp-validation-for="dsitem" class="text-danger"></span>
          
                <label asp-for="snativo" class="control-label">Está Ativo?</label>
                <select asp-for="snativo" class="form-control" />
                <option>S</option>
                <option>N</option>
                <span asp-validation-for="snativo" class="text-danger"></span>
           
                <label asp-for="imagem" class="control-label"></label>
                <input asp-for="imagem" class="form-control" />
                <span asp-validation-for="imagem" class="text-danger"></span>
          
                <input asp-for="iduser" type="hidden" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value" class="form-control" />
                <span asp-validation-for="iduser" class="text-danger"></span>
            
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index">Voltar para a lista</a>
            </div>
        </form>
    </main>
</body>
</html>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
