@page
@model Disable2faModel
@{
    ViewData["Title"] = "Disable two-factor authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Esta ação desativa apenas A2F.</strong>
    </p>
    <p>
        Desativar 2FA não altera as chaves usadas em aplicativos autenticadores. Se você deseja alterar a chave
        usado em um aplicativo autenticador, você deve <a asp-page="./ResetAuthenticator">redefinir suas chaves do autenticador.</a>
    </p>
</div>

<div>
    <form method="post">
        <button class="btn btn-danger" type="submit">Desabilitar A2F</button>
    </form>
</div>
